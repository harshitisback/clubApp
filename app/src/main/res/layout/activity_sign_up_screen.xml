<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".signUp_screen">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">


        <ImageView
            android:id="@+id/signupbkbtn"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginEnd="104dp"
            android:background="@drawable/ic_baseline_arrow_back_24"
            app:layout_constraintBottom_toBottomOf="@+id/login_scree"
            app:layout_constraintEnd_toStartOf="@+id/login_scree"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@+id/login_scree"
            app:layout_constraintVertical_bias="0.0" />


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/login_scree"
            android:layout_width="146dp"
            android:layout_height="146dp"
            android:layout_marginTop="24dp"
            android:src="@drawable/comments_image"
            android:clipToOutline="true"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </de.hdodenhof.circleimageview.CircleImageView>

        <ImageView
            android:id="@+id/button6"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/addphotobtn"
            android:fontFamily="@font/poppins_bold"

            app:layout_constraintBottom_toBottomOf="@+id/login_scree"
            app:layout_constraintEnd_toEndOf="@+id/login_scree"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/login_scree"
            app:layout_constraintTop_toTopOf="@+id/login_scree"
            app:layout_constraintVertical_bias="1.0" />

        <EditText
            android:id="@+id/editTextTextPersonName"
            android:layout_width="353dp"
            android:layout_height="48dp"
            android:layout_marginTop="45dp"
            android:background="@drawable/round_border"
            android:ems="10"
            android:hint="Enter Fullname"
            android:inputType="textPersonName"
            android:paddingLeft="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/login_scree" />

        <EditText
            android:id="@+id/enteremail"
            android:layout_width="353dp"
            android:layout_height="48dp"
            android:layout_marginTop="23dp"
            android:background="@drawable/round_border"
            android:ems="10"
            android:hint="Enter email"
            android:inputType="textPersonName"
            android:paddingLeft="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName" />

        <EditText
            android:id="@+id/entermobileno"
            android:layout_width="353dp"
            android:layout_height="48dp"
            android:layout_marginTop="23dp"
            android:background="@drawable/round_border"
            android:ems="10"
            android:hint="Enter Mobile No"
            android:inputType="textPersonName"
            android:paddingLeft="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/enteremail" />

        <EditText
            android:id="@+id/enterpass"
            android:layout_width="353dp"
            android:layout_height="48dp"
            android:layout_marginTop="23dp"
            android:background="@drawable/round_border"
            android:ems="10"
            android:hint="Enter Password"
            android:inputType="textPersonName"
            android:paddingLeft="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/entermobileno" />

        <EditText
            android:id="@+id/confirmpass"
            android:layout_width="353dp"
            android:layout_height="48dp"
            android:layout_marginTop="23dp"
            android:background="@drawable/round_border"
            android:ems="10"
            android:hint="Confirm Password"
            android:inputType="textPersonName"
            android:paddingLeft="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/enterpass" />

        <Button
            android:id="@+id/button4"

            android:layout_width="250dp"
            android:layout_height="51dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/gradientbtn"
            android:fontFamily="@font/poppins_bold"
            android:text="Sign Up"

            android:textAllCaps="false"
            android:textColor="#fff"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/confirmpass" />

        <Button
            android:id="@+id/signupwg"

            android:layout_width="250dp"
            android:layout_height="51dp"
            android:layout_marginTop="27dp"
            android:background="@drawable/signup_bg_border"
            android:drawableStart="@drawable/icons_google_24"
            android:fontFamily="@font/poppins_bold"
            android:gravity="left|center"
            android:paddingLeft="23dp"
            android:text="   Sign Up with Google"
            android:textColor="#FFA852"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button4" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>