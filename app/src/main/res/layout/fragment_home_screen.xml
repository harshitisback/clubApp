<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="219dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="116dp"
                android:layout_height="117dp"
                android:layout_marginStart="140dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="820dp"
                android:src="@drawable/insightslogo" />

            <ImageView
                android:id="@+id/insights_club"
                android:layout_width="245sp"
                android:layout_height="43sp"
                android:layout_marginStart="-195dp"
                android:layout_marginTop="70dp"
                android:layout_marginBottom="10dp"
                android:padding="1dp"
                android:src="@drawable/insights_club_vancouver_image" />

            <ImageView
                android:id="@+id/profile_pic_home_screen"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="7dp"
                android:src="@drawable/profile_photo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="-400dp"
                android:layout_marginTop="165dp"
                android:fontFamily="@font/poppins_bold"
                android:padding="5dp"
                android:text="Upcoming Events"
                android:textAlignment="center"
                android:textColor="#F9A826"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="58dp"
                android:layout_marginTop="165dp"
                android:fontFamily="@font/poppins_bold"
                android:padding="5dp"
                android:text="View more"
                android:textAlignment="center"
                android:textColor="#7B7B7B"
                android:textSize="18sp" />

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/upcomming_rec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="5dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/poppins_bold"
                android:padding="5dp"
                android:text="Ongoing Events"
                android:textAlignment="center"
                android:textColor="#F9A826"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="100dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/poppins_bold"
                android:padding="5dp"
                android:text="View more"
                android:textAlignment="center"
                android:textColor="#7B7B7B"
                android:textSize="18sp" />

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/ongoing_rec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="5dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/poppins_bold"
                android:padding="5dp"
                android:text="Past Events"
                android:textAlignment="center"
                android:textColor="#F9A826"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="137dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/poppins_bold"
                android:padding="5dp"
                android:text="View more"
                android:textAlignment="center"
                android:textColor="#7B7B7B"
                android:textSize="18sp" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/past_rec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="5dp" />

    </LinearLayout>

</ScrollView>

