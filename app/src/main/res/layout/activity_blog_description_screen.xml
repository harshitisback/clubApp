<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">


        <ImageView
            android:id="@+id/bg_blog"
            android:layout_width="420dp"
            android:layout_height="366dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="1000dp"
            android:background="@drawable/blog_description_bg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.526"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/save_blog"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_marginStart="312dp"
            android:layout_marginTop="21dp"
            android:layout_marginEnd="24dp"
            app:layout_constraintBottom_toBottomOf="@+id/bg_blog"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/bg_blog"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/blog_save_image" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:layout_marginTop="5dp"
            app:layout_constraintBottom_toBottomOf="@+id/save_blog"
            app:layout_constraintEnd_toStartOf="@+id/save_blog"
            app:layout_constraintHorizontal_bias="0.077"
            app:layout_constraintStart_toStartOf="@+id/bg_blog"
            app:layout_constraintTop_toTopOf="@+id/bg_blog"
            app:layout_constraintVertical_bias="0.541"
            app:srcCompat="@drawable/ic_baseline_arrow_back_24" />

        <TextView
            android:id="@+id/name_blog"
            android:layout_width="303dp"
            android:layout_height="74dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="220dp"
            android:layout_marginEnd="14dp"
            android:fontFamily="@font/poppins_semibold"
            android:padding="2dp"
            android:text="Lorem ipsum dolor sit amet"
            android:textColor="@color/white"
            android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="@+id/bg_blog"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.093"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.051" />

        <TextView
            android:id="@+id/date_blog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="19dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="5dp"
            android:text="24 Aug 2022       ."
            android:textSize="14sp"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_semibold"
            android:padding="2dp"
            app:layout_constraintBottom_toBottomOf="@+id/bg_blog"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/name_blog" />

        <TextView
            android:id="@+id/time_blog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/poppins_semibold"
            android:padding="2dp"
            android:text="12 min ago"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/bg_blog"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/date_blog"
            app:layout_constraintTop_toBottomOf="@+id/name_blog" />

        <ImageView
            android:id="@+id/thumbs_up"
            android:layout_width="54sp"
            android:layout_height="54sp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toEndOf="@+id/time_blog"
            app:layout_constraintTop_toBottomOf="@+id/name_blog"
            app:srcCompat="@drawable/thumbs_up_green" />

        <ImageView
            android:id="@+id/thumbs_down"
            android:layout_width="54sp"
            android:layout_height="54sp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toEndOf="@+id/thumbs_up"
            app:layout_constraintTop_toBottomOf="@+id/name_blog"
            app:srcCompat="@drawable/thumbs_down_white" />

