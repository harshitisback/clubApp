        <TextView
            android:id="@+id/person_3_comments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Lorem ipsum dolor"
            android:textColor="#454545"
            android:textSize="13sp"
            android:fontFamily="@font/poppins"
            app:layout_constraintEnd_toEndOf="@+id/person_3_name"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/person_3_pp"
            app:layout_constraintTop_toBottomOf="@+id/person_3_name" />

        <EditText
            android:id="@+id/comment_section"
            android:layout_width="390sp"
            android:layout_height="52sp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="316dp"
            android:layout_marginEnd="21dp"
            android:hint="Add your comments"
            android:textColor="#C6C6C6"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.476"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/blog_description" />

        <ImageView
            android:id="@+id/send_bg"
            android:layout_width="97sp"
            android:layout_height="52sp"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toBottomOf="@+id/comment_section"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.966"
            app:layout_constraintStart_toStartOf="@+id/comment_section"
            app:srcCompat="@drawable/send_bg" />

        <TextView
            android:id="@+id/send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/poppins"
            android:paddingRight="1dp"
            android:text="Send"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/send_bg"
            app:layout_constraintEnd_toEndOf="@+id/send_bg"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/send_bg"
            app:layout_constraintTop_toTopOf="@+id/send_bg"
            app:layout_constraintVertical_bias="0.0" />

